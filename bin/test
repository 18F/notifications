#! /usr/bin/env bash
set -e

DIR=$(dirname $0)

if [[ -z "$ENVIRONMENT" ]]; then
    ENVIRONMENT=test
fi

GREEN="\033[0;32m"
RED="\033[0;31m"
NONE="\033[0m"

source $DIR/env/$ENVIRONMENT
EXIT_CODE=0

#if [[ $EXIT_CODE = 0 ]]; then
    #$DIR/unit
    #EXIT_CODE=$?
#fi

#if [[ $EXIT_CODE = 0 ]]; then
    #echo
    #$DIR/acceptance
    #EXIT_CODE=$?
#fi

if [[ $EXIT_CODE = 0 ]]; then
    echo
    pushd $DIR/.. > /dev/null 2>&1
        output=`find . -path ./Godeps -prune -o -type d -d 1 -print | xargs go tool vet`
        if [[ -z $output ]]; then
            echo $output
            EXIT_CODE=187
        fi
    popd > /dev/null 2>&1
fi

if [[ $EXIT_CODE = 0 ]]; then
    STATE="${GREEN}TEST SUITE PASS${NONE}"
else
    STATE="${RED}TEST SUITE FAIL${NONE}"
fi

echo
echo -e $STATE

exit $EXIT_CODE
