#! /usr/bin/env bash

set -e

if [[ -z "$UAA_HOST" ]]; then
    export UAA_HOST=http://uaa.10.244.0.34.xip.io
fi

if [[ -z "$UAA_CLIENT_ID" ]]; then
    export UAA_CLIENT_ID=notifications
fi

if [[ -z "$UAA_CLIENT_SECRET" ]]; then
    export UAA_CLIENT_SECRET=secret
fi

export HTTP_LOGGING_ENABLED=true

go run main.go
